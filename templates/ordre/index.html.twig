{% extends 'base.html.twig' %}

{% block title %}Ordre index{% endblock %}

{% block body %}
    <h1>Ordre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Location</th>
                <th>Package</th>
                <th>Date</th>
                <th>Time</th>
                <th>Status</th>
                <th>TypePaiement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ordre in ordres %}
            <tr>
                <td>{{ ordre.id }}</td>
                <td>{{ ordre.Location }}</td>
                <td>{{ ordre.Package }}</td>
                <td>{{ ordre.Date ? ordre.Date|date('Y-m-d') : '' }}</td>
                <td>{{ ordre.Time ? ordre.Time|date('H:i:s') : '' }}</td>
                <td>{{ ordre.Status }}</td>
                <td>{{ ordre.typePaiement }}</td>
                <td>
                    <a href="{{ path('ordre_show', {'id': ordre.id}) }}">show</a>
                    <a href="{{ path('ordre_edit', {'id': ordre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ordre_new') }}">Create new</a>
{% endblock %}
